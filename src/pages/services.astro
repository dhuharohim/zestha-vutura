---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import cms from "@images/cms.jpg";
import cms1 from "@images/cms-1.jpg";
import saas from "@images/saas.jpg";
import ecommerce from "@images/e-commerce.jpg";
import ecommerce1 from "@images/e-commerce-1.jpg";
import erp from "@images/erp.jpg";
import eJournal from "@images/e-journal.jpg";
import crm from "@images/crm.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Content Management System (CMS)",
    subTitle:
      "We specialize in developing custom Content Management Systems (CMS) designed to meet the unique needs of your business. From building bespoke CMS solutions that are tailored to your requirements to integrating these systems seamlessly with your existing platforms, we ensure a smooth and efficient content management experience. Our services also include ongoing maintenance and support to keep your CMS up-to-date and functioning flawlessly.",
    single: false,
    imgOne: cms,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: cms1,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Software as a Service (SaaS) Platforms",
    subTitle:
      "Our expertise in Software as a Service (SaaS) platform development enables us to create scalable, cloud-based applications that grow with your business. We offer comprehensive services, including the design and development of SaaS applications, customization to align with your specific business needs, and integration with third-party services to enhance functionality and streamline operations.",
    img: saas,
    imgAlt: "Construction site before and after",
  },
  {
    isRightSection: true,
    title: "E-Commerce Solutions",
    subTitle:
      "We provide end-to-end e-commerce solutions to help you establish and grow your online store. Our services include developing robust, secure e-commerce websites with intuitive user interfaces, integrating various payment gateways for seamless transactions, and customizing e-commerce platforms to suit your specific business model. We ensure that your online store is equipped to handle everything from product listings to customer transactions with ease.",
    single: false,
    imgOne: ecommerce,
    imgOneAlt: "Construction workers orchestrating a project",
    imgTwo: ecommerce1,
    imgTwoAlt: "Aerial view of managed construction",
  },
  {
    isRightSection: false,
    title: "E-Journal and Publishing",
    subTitle:
      "We offer specialized services for developing and managing e-journals and publishing platforms. Whether you need a solution for an online journal, magazine, or newsletter, our team provides tools for content creation, subscription management, and distribution. Our platforms are designed to facilitate seamless publishing processes and manage subscriber access effectively.",
    img: eJournal,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title:
      "Enterprise Resource Planning (ERP) and Customer Relationship Management (CRM)",
    subTitle:
      "We offer robust ERP and CRM solutions designed to transform and streamline your business operations. Our ERP systems integrate all key functions—such as finance, human resources, supply chain management, and production—into a cohesive platform, enhancing operational efficiency and providing valuable insights for data-driven decision-making. Complementing our ERP solutions, our CRM systems are designed to manage and analyze customer interactions and data throughout the customer lifecycle. Our CRM solutions help you improve customer relationships, optimize sales and marketing strategies, and enhance customer service. Both ERP and CRM systems are customized to fit your industry-specific needs, ensuring seamless integration with your existing infrastructure and providing ongoing support to maximize performance and growth.",
    single: false,
    imgOne: erp,
    imgOneAlt: "In progress building structure",
    imgTwo: crm,
    imgTwoAlt: "Brown and gray building under construction",
    btnExists: false,
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://zestha-vutura.tech/services",
    url: "https://zestha-vutura.tech/services",
    name: "Expert Consultation Services | Zestha Vutura",
    description:
      "Uniting expertise with your vision, Zestha Vutura provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://zestha-vutura.tech",
      name: "Zestha Vutura",
      description:
        "Zestha Vutura offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <!-- <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At Zestha Vutura, we take pride in providing comprehensive solutions and exceptional service in the hardware and construction industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={false}
  /> -->
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Zestha Vutura, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Zestha Vutura as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
