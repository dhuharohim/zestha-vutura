---
import Icon from "../icons/Icon.astro";

// TeamMember.astro
const { name, position, photoUrl, instagramUrl, linkedinUrl, whatsappUrl } =
  Astro.props;
---

<div
  class="card w-full rounded-xl bg-neutral-50 p-4 hover:bg-neutral-300 dark:bg-neutral-600/30 dark:hover:bg-neutral-700"
>
  <div class="flex space-x-4">
    <img
      src={photoUrl}
      alt={name}
      class="h-20 w-20 rounded-full object-cover object-top"
    />

    <div class="desc">
      <div class="text-lg font-bold text-neutral-800 dark:text-neutral-200">
        {name}
      </div>
      <div class="text-sm text-neutral-600 dark:text-neutral-400">
        {position}
      </div>
      <div class="mt-2 flex space-x-3">
        {
          instagramUrl && (
            <a
              href={instagramUrl}
              target="_blank"
              class="text-orange-300 hover:text-orange-400"
            >
              <Icon name="instagram" />
            </a>
          )
        }
        {
          linkedinUrl && (
            <a
              href={linkedinUrl}
              target="_blank"
              class="text-orange-300 hover:text-orange-400"
            >
              <Icon name="linkedIn" />
            </a>
          )
        }
        {
          whatsappUrl && (
            <a
              href={whatsappUrl}
              target="_blank"
              class="text-orange-300 hover:text-orange-400"
            >
              <Icon name="whatsApp" />
            </a>
          )
        }
      </div>
    </div>
  </div>
</div>
